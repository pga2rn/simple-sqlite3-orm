{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "pep621"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "uv"
      ],
      "groupName": "python-dependencies",
      "rangeStrategy": "widen"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "onboarding": false,
  "requireConfig": "optional"
}